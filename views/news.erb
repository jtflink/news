<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- My own CSS -->
    <link rel="stylesheet" href="styles.css">

    <title>Weather + News</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="logo.png" class="d-inline-block align-middle">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav ml-auto">
            <a class="nav-item nav-link active" href="/">Home<span class="sr-only">(current)</span></a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Weather -->
    <div class="weather py-4">
      <div class="container">
        <div class="row">
          <div class="col">
            <h1 class="text-center my-4"><%= "Weather report for #{@location}" %></h1>
            <h4 class="text-center my-4"><%= "Currently it is #{@current_temp}° and #{@current_conditions}" %></h4>
            <table class="table table-striped table-light">
              <thead>
                <tr>
                  <th>Forecast</th>
                  <th>Low</th>
                  <th>High</th>
                  <th>Conditions</th>
                </tr>
              </thead>
              <tbody>
                <% for day in @extended_forecast %>
                <tr>
                  <td><%= Time.at(day["time"]).strftime("%A, %B %e") %></td>
                  <td><%= "#{day["temperatureLow"]}°" %></td>
                  <td><%= "#{day["temperatureHigh"]}°" %></td>
                  <td><%= day["summary"] %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- News -->
    <div class="news py-4">
      <div class="container">
        <div class="row">
          <div class="col">
            <h1 class="text-center my-4">Top News</h1>
            <table class="table table-striped table-light">
              <thead>
                <tr>
                  <th>News</th>
                  <th>Article</th>
                </tr>
              </thead>
              <tbody>
                <% for article in @articles %>
                <tr>
                  <td><%= article["title"] %></td>
                  <td><a href="<%= article["url"] %>">Article</a></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col text-center">
            <a class="btn btn-outline-light btn-lg my-4" href="/" role="button">Enter another location</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer mt-5">
      <div class="container">
        <div class="row pb-5">
          <div class="col-sm-8 mt-2">
            <img src="logo.png">
          </div>
          <div class="col mt-3">
            <p><em>The best weather and news app available</em></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>